<%= form_tag(search_path, :method => "get") do %>
  <div class="input-group">
    <%= search_field_tag :index, params[:search], placeholder: "Where are you going?", class: "form-control" %>
    <div class="input-group-btn">
      <%= button_tag "Find a bike!", :class => 'btn btn-outline-primary glyphicon glyphicon-search', :name => nil %>
    </div>
  </div>
<% end %>

