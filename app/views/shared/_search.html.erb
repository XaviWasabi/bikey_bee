<%= form_tag(search_path, :method => "get") do %>
  <div class="input-group">
    <%= search_field_tag :search, params[:search], placeholder: "Search a city", class: "form-control" %>
    <div class="input-group-btn">
      <%= button_tag "Search for bikes", :class => 'btn btn-outline-primary glyphicon glyphicon-search', :name => nil %>
    </div>
  </div>
<% end %>
