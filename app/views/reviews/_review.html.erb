<div class="review">
  <p><%= @bike.name %></p>

  <div class="review-rating">
    <% review.rating.times do %>
    <p><i class="fas fa-star"></i></p>
    <% end %>
  </div>

  <div>
    <p class="review-content"><%= review.content %></p>
    <% if user_signed_in? %>
      <% if review.user_id == current_user.id %>
        <div>
          <%= link_to "Edit", edit_bike_review_path(review.bike, review), class: "btn btn-custom" %>
          <%= link_to "Delete", bike_review_path(review.bike, review), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-custom" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
