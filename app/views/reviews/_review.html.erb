<div class="review">
  <p><%= @bike.name %></p>

  <div class="review-rating">
    <% review.rating.times do %>
    <p><i class="fas fa-star"></i></p>
    <% end %>
  </div>
  <% if user_signed_in? %>

    <% if review.user_id == current_user.id %>

      <div class="links btn-group">

        <%= link_to "Edit", edit_review_path(review), class: "btn btn-custom" %>
        <%= link_to "Delete", review_path(review), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-custom" %>

      </div>
    <% end %>
    <% end %>
  </div>
</div>
