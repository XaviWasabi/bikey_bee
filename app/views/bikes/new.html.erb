<%= form_for(@bike) do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.label :size %>
  <%= f.select :size, ['12"', '16"', '18"', '20"', '24"'] %>
  <%= f.label :price %>
  <%= f.number_field :price, in: 1.0..30.0, step: 0.5 %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.submit %>
<% end %>
