<%= form_for(@bike) do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.label :size %>
  <%= f.select :size, %w(extra-small small medium large extra-large) %>
  <%= f.label :price %>
  <%= f.number_field :price, in: 10..50, step: 1 %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :user_id %>
  <%= f.number_field :user_id %>
  <%= f.submit %>
<% end %>
