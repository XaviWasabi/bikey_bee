      <!-- the below code allows for the bike picture to be a link to the bike show page -->
      <%= link_to cl_image_tag bike.picture, brightness: 30, radius: 20, width: 300, height: 300, crop: :thumb, bike_path(bike) %>
      <div class="card-name-price">
        <p style="text-align: center; font-weight: bold;"><%= bike.name %></p>
        <hr>
        <p>Price per day: <%= bike.price %>â‚¬</p>
        <p>Size: <%= bike.size %></p>
