<div class="show-container">
  <div>
    <h2><%= @bike.name %></h2>
    <br>
    <h5>About</h5>
    <p><%= @bike.description %></p>
    <p class="card-text"><strong>Category</strong>: <%= @bike.category %>, <strong>size</strong>: <%= @bike.size %>.</p>
  </div>
  <div class="card-price" style="width: 100%;">
    <div class="card-body text-center">
      <h5 class="card-title">Price for 1 day: <strong><%= @bike.price %>â‚¬</strong></h5>
      <h6 class="card-subtitle mb-2 text-muted">Special offer!</h6>
      <%= link_to "Book this bike", new_bike_booking_path(@bike), class: "btn btn-primary" %>
    </div>
  </div>
  <div class="show-foto-map-container">
    <div class="card-show" style="background-image: url(<%= cl_image_path @bike.picture.key, height: 300, width: 400, crop: :fill %>)">
    </div>
    <div>
      <div id="map"
        style="width: 100%; height: 400px;"
        data-marker="<%= @marker.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
  <div class="review-container">
    <ul class="list-group">
      <% @bike.reviews.each do |review| %>
        <li class="list-group-item"><%= review.content %></li>
      <% end %>
    </ul>
    <% if current_user.bookings.where(bike: @bike).any? %>
      <%= link_to 'Leave a review', new_bike_review_path(@bike), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>





